<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="shivam.com.isitso.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="@dimen/title_size"
            android:gravity="center"
            android:textColor="@color/title_col"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="सचिन तेंदुलकर "
            android:onClick="showSachin"
            android:textSize="@dimen/b_size"
            android:textColor="@color/b_col"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="द ग्रेट खली"
            android:onClick="showKhali"
            android:textSize="@dimen/b_size"
            android:textColor="@color/b_col"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="अमेरिका "
            android:onClick="showAmerica"
            android:textSize="@dimen/b_size"
            android:textColor="@color/b_col"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="सैमसंग "
            android:onClick="showSamsung"
            android:textSize="@dimen/b_size"
            android:textColor="@color/b_col"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="अंडरटेकर "
            android:onClick="showUndertaker"
            android:textSize="@dimen/b_size"
            android:textColor="@color/b_col"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="अब्दुल कलाम जी  "
            android:onClick="showKalamJi"
            android:textSize="@dimen/b_size"
            android:textColor="@color/b_col"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="आयरलैंड  "
            android:onClick="showAirland"
            android:textSize="@dimen/b_size"
            android:textColor="@color/b_col"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="व्हात्सप्प  "
            android:onClick="showWhatsapp"
            android:textSize="@dimen/b_size"
            android:textColor="@color/b_col"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="हिटलर   "
            android:onClick="showHitlar"
            android:textSize="@dimen/b_size"
            android:textColor="@color/b_col"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="बिल गेट्स  "
            android:onClick="showBill"
            android:textSize="@dimen/b_size"
            android:textColor="@color/b_col"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="गांधी जी  "
            android:onClick="showGandhiJi"
            android:textSize="@dimen/b_size"
            android:textColor="@color/b_col"/>














        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About"
            android:onClick="showAbout"
            android:textSize="@dimen/b_size"
            android:textColor="@color/b_col"/>

    </LinearLayout>
</RelativeLayout>
